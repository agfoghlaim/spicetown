
        <div class="col col-md-3 col-sm-3 col-lg-3" id="getcontent" >
            <h2>Categories</h2>
            <% @all_categories.each do |category|%>
                <%# category_products_path because of nested routes %>
                    <h4 id="<%= category.id%>"><%= category.title%> (<%= category.products.count%>)</h4>
            <% end %>


            <h2>Categories Rails</h2>
            <% @all_categories.each do |category| %>
                        <%= form_tag filter_products_path do %>
                  <%= hidden_field_tag :category_id, category.id %>
                
                 
                  <%= submit_tag "#{category.title}(#{category.products.count})" , class: "btn btn-secondary btn-sm" %>
                <% end %>
             
            <% end %>

            <h4>more cats</h4>
            <% if @cat_ids %>
           <% @cat_ids.each do |i| %></h1>
           <%= @cat_ids %>
            <h1>i</h1>
            <% end %>
            <% end %>
            
            <p>
              <%= form_tag filter_products_path do %>
              <% for category in @all_categories %>
                <%= check_box_tag "category_ids[]", category.id %>
                <%= category.id %><br>
              <% end %>
                <%= submit_tag "pickkkkk" %>
              <% end %>
              
            </p>

              <p>
              
              <%= form_tag(products_path, method: :get)do %>
              <% for category in @all_categories %>
                <%= check_box_tag "category_ids[]", category.id, @cat_ids.include?(category.id.to_s)
                   %>
                <%= "#{category.title} (#{category.products.count})" %><br>
             
              <% end %>
                <%= submit_tag "Go" %>
              <% end %>
              
            </p>

            
       
      
              
            </p>
        </div><%# end categories sidebar %>