
<h3>Cart Total: <span><%= number_to_currency(@cart.cart_total, unit: "€") %></span></h3>
  
  <h3>Your Cart</h3>
  <table class="table table-hover">
    <thead>
      <tr>
        <td><strong>Product</strong></td>
        <td><strong>Weight</strong></td>
        <td><strong>Item total</strong></td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @cart.oitems.each do |oi| %>
      <tr>
        <td><%= oi.product.title  %></td>
        <td><%= oi.weight %>g</td>
        <td><%= number_to_currency(oi.total, unit: "€") %></td>
        <td><%= link_to  "remove", oi, method: :delete, class: 'btn btn-xs btn-danger' %></td>
      </tr>
   <% end  %>
    </tbody>
  </table>

<%= button_to "Go to Payment", associate_user_with_cart_path(:id => @cart.id) %>